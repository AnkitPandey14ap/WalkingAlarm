<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.krishna.walkingalarm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityPackage.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ActivityPackage.SplashActivty"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>


        <activity
            android:name=".ActivityPackage.AlarmDetails"
            android:label="@string/title_activity_alarm_details"></activity>


        <activity
            android:name=".PopUps.RepeatDays"
            android:theme="@style/Theme.AppCompat.Dialog">
        </activity>


        <activity android:name=".PopUps.OffMethodActivity"
            android:theme="@style/Theme.AppCompat.Dialog">

        </activity>
    </application>

</manifest>